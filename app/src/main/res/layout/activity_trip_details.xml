<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.views.bookingFlow.TripDetailsShowCaseActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/standarad_toolbar" />

    <include layout="@layout/progress_bar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_one_way_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tickets for HYD-VSKP"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:background="@color/light_gray"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tv_return_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tickets for HYD-VSKP"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@color/light_gray"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_return_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical" />

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>